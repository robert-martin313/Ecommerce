@using MrCMS.Helpers
@model MrCMS.Models.SiteCopyOptions
@{
    var otherSites = ViewData["other-sites"] as IEnumerable<SelectListItem>;
}
@Html.LabelFor(options => options.SiteId)
@Html.DropDownListFor(options => options.SiteId, otherSites)
@Html.ValidationMessageFor(options => options.SiteId)

<div id="other-site-copy-options">
    <div class="row-fluid">
        <div class="span6">
            @Html.InlineCheckboxFor(options => options.CopyLayouts)
            @Html.InlineCheckboxFor(options => options.CopyMediaCategories)
            @Html.InlineCheckboxFor(options => options.CopyHome)
            @Html.InlineCheckboxFor(options => options.CopyLogin)
        </div>
        <div class="span6">
            @Html.InlineCheckboxFor(options => options.Copy404)
            @Html.InlineCheckboxFor(options => options.Copy403)
            @Html.InlineCheckboxFor(options => options.Copy500)
        </div>
    </div>
</div>
