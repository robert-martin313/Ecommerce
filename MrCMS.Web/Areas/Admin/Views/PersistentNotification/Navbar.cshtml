@model dynamic

<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" data-toggle="dropdown"><i class="glyphicon glyphicon-bullhorn glyphicon"></i> &nbsp;<span class="badge badge-important" style="background:#d90000;" data-notification-count="true">-</span></a>
        <div class="dropdown-menu notifications-dropdown reset-corners">
            @using (Html.BeginForm("MarkAllAsRead", "PersistentNotification", FormMethod.Post, new { @style = "margin:0", data_mark_all_as_read = true }))
            {
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-default btn-block reset-corners">
                                    Dismiss all
                                </button>
                            </div>
                            <div class="col-lg-6">
                                <a href="@Url.Action("Index", "Notification")" class="btn btn-default btn-block reset-corners">View All</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <ul data-notification-list="true" class="persistent-notification">
                <li>No notifications</li>
            </ul>
        </div>
    </li>
</ul>
