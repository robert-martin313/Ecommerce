@model MrCMS.Models.UserSearchQuery
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Index", "User", FormMethod.Get))
        {
            @Html.TextBoxFor(query => query.Query, new { @class = "search-query", placeholder = "Search" })
            <input type="submit" class="btn btn-xs btn-primary" value="Search" />
            @Html.ValidationMessageFor(query => query.Query)
        }
    </div>
</div>
