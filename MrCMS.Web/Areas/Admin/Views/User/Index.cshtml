@using MrCMS.Entities.People
@using MrCMS.Helpers
@model MrCMS.Paging.IPagedList<User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <fieldset>
        <legend>Users

            <span class="btn-group  display-inline  pull-right">
                @Html.ActionLink("Add", "Add", null, new { @class = "btn btn-success", data_toggle = "fb-modal" })

                <input type="submit" value="Search" class="btn btn-primary" />
            </span>
        </legend>

        <label for="SearchText">Search</label>
        <input type="text" name="SearchText" id="SearchText" value="@Request["SearchText"]" class="input-xxlarge" />

        @if (Model.Any())
        {
            <table class="table table-condensed table-striped">
                <tr>
                    <th>Email
                    </th>
                    <th>Name
                    </th>
                    <th>Created On
                    </th>
                </tr>
                @foreach (User user in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(user.Email, "Edit", new {id = user.Id})
                        </td>
                        <td>
                            @user.Name
                        </td>
                        <td>
                            @user.CreatedOn
                        </td>
                    </tr>
                }
            </table>
            @Html.Pager(Model, "Index", page => new {page})
        }
        else
        {
            @:<p>No users found, please refine your search.</p>
        }
    </fieldset>
}