@using MrCMS.Helpers
@model List<MrCMS.Services.MessageTemplateInfo>
@{
    ViewBag.Title = "Message Templates";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form>
    <fieldset>
        <legend>Message Templates
        </legend>

        <table class="table table-condensed table-striped">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Type.Name.BreakUpString()
                    </td>
                    <td>
                        <div class="btn-group">
                            @(item.Id.HasValue
                        ? Html.ActionLink("Edit", "Edit", new { Id = item.Id }, new { @class = "btn btn-success" })
                        : Html.ActionLink("Add", "Add", new { type = item.Type.Name }, new { @class = "btn btn-primary" }))
                            @if (item.CanPreview)
                            {
                                @Html.ActionLink("Preview", "Preview", "MessageTemplate", new { id = item.Id }, new { @class = "btn", data_toggle="fb-modal" })
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>
    </fieldset>
</form>
