@model MrCMS.Entities.Documents.Web.Webpage
@{
    ViewBag.Title = "View";
}
<hr class="small-margin" />

<div class="row-fluid">
    <div class="span12">
        <div class="btn-group display-inline pull-right">
            @Html.ActionLink("Edit", "Edit", "Webpage", new { id = Model.Id }, new { @class = "btn" })
            @if (!Model.Children.Any())
            {
                <a href="@Url.Action("Delete", "Webpage", new { id = Model.Id })" class="btn btn-danger" data-toggle="fb-modal">Delete Webpage</a>
            }
        </div>
    </div>
    <hr class="small-margin" />
</div>
<hr class="small-margin" />

<iframe src="/@Model.LiveUrlSegment" width="100%" height="800" scrolling="yes" frameborder="0" border="0"></iframe>

