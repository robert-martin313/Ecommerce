@using MrCMS.Helpers
@model MrCMS.Entities.Documents.Web.Webpage
<div class="tab-pane" id="postings-tab">
    <div class="row">
        <div class="col-lg-7">
            <h4>Entries (@Model.FormPostingsCount())</h4>
        </div>
        <div class="col-lg-5">
            <div class="pull-right btn-group">
                @if (Model.FormPostingsCount() > 0)
                {
                    @Html.ActionLink("Delete all entries", "ClearFormData", "Form", new { id = Model.Id }, new { @class = "btn btn-xs btn-danger", data_toggle = "fb-modal" })
                    @Html.ActionLink("Export Entries", "ExportFormData", "Form", new { id = Model.Id }, new { @class = "btn btn-xs btn-primary" })
                }
            </div>
        </div>
    </div>
    @{ Html.RenderAction("Postings", "Form", new { id = Model.Id });}
</div>
