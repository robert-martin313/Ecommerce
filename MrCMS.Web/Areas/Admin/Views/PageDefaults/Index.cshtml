@model List<MrCMS.Web.Areas.Admin.Models.PageDefaultsInfo>

<fieldset>
    <legend>
        Page Defaults
    </legend>
    <table class="table table-condensed table-striped">
        <thead>
            <tr>
                <th>
                    Page Type
                </th>
                <th>
                    Default Generator
                </th>
                <th>
                    Default Layout
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var info in Model)
            {
                <tr>
                    <td>
                        @info.DisplayName
                    </td>
                    <td>
                        @info.GeneratorDisplayName
                    </td>
                    <td>
                        @info.LayoutName
                    </td>
                    <td>
                        @Html.ActionLink("Set default", "Set", "PageDefaults", new { type = info.TypeName }, new { @class = "btn btn-xs btn-default", data_toggle = "fb-modal" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</fieldset>