@model MrCMS.Logging.Log
@{
    ViewBag.Title = "View Log #" + Model.Id;
}

<form>
    <fieldset>
        <legend>Log #@Model.Id

            <span class="btn-group  display-inline  pull-right">
                @Html.ActionLink("Back to list", "Index", null, new { @class = "btn " })
                <a href="@Url.Action("DeleteLog", "Log", new { Model.Id })" class="btn btn-danger" data-toggle="fb-modal">Delete log</a>
            </span>
        </legend>
    </fieldset>
</form>
<div class="row-fluid">
    <table class="table table-striped table-condensed">

        <tbody>
            <tr>
                <td class="span2">Type
                </td>
                <td class="span10">
                    @Model.Type
                </td>
            </tr>
            <tr>
                <td>Created on
                </td>
                <td>
                    @Model.CreatedOn
                </td>
            </tr>
            <tr>
                <td>Message
                </td>
                <td>
                    @Model.Message
                </td>
            </tr>
            <tr>
                <td>Detail
                </td>
                <td>
                    @Model.Detail
                </td>
            </tr>
        </tbody>
    </table>
    @if (Model.Error != null)
    {
        <h4>Server Variables</h4>
        <div style="overflow: scroll">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th class="span2">Key
                        </th>
                        <th class="span10">Value
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var key in Model.Error.ServerVariables.AllKeys)
                    {
                        <tr>
                            <td>
                                @key
                            </td>
                            <td>
                                @Model.Error.ServerVariables[key]
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    }
</div>
