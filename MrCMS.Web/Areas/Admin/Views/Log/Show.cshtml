@model MrCMS.Logging.Log
@{
    ViewBag.Title = "View Log #" + Model.Id;
}
<div class="row-fluid">
    <div class="span4">
        <h2>Log #@Model.Id</h2>
    </div>
    <div class="span8">
        <div class="btn-group display-inline  pull-right">
            @Html.ActionLink("Back to list", "Index", null, new { @class = "btn " })
            <a href="@Url.Action("DeleteLog", "Log", new {Model.Id})" class="btn btn-danger" data-toggle="fb-modal">Delete log</a>
        </div>
    </div>
</div>
<div class="row-fluid">
    <table class="table table-striped table-bordered">

        <tbody>
            <tr>
                <td>Type
                </td>
                <td>
                    @Model.Type
                </td>
            </tr>
            <tr>
                <td>Created on
                </td>
                <td>
                    @Model.CreatedOn
                </td>
            </tr>
            <tr>
                <td>Message
                </td>
                <td>
                    @Model.Message
                </td>
            </tr>
            <tr>
                <td>Detail
                </td>
                <td>
                    @Model.Detail
                </td>
            </tr>
        </tbody>
    </table>
    @if (Model.Error != null)
    {
        <h3>Server Variables</h3>
        <div  style="overflow: scroll">
            <table class="table table-striped table-bordered" >
                <thead>
                    <tr>
                        <th>Key
                        </th>
                        <th>Value
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var key in Model.Error.ServerVariables.AllKeys)
                    {
                        <tr>
                            <td>
                                @key
                            </td>
                            <td>
                                @Model.Error.ServerVariables[key]
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    }
</div>
