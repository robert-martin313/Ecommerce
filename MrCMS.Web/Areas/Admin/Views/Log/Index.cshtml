@using MrCMS.Helpers
@using MrCMS.Logging
@model MrCMS.Paging.IPagedList<Log>
@{
    ViewBag.Title = "Logs";
    var query = ViewData["query"] as LogSearchQuery ?? new LogSearchQuery();
}

<fieldset>
    <legend>Logs 
            <span class="btn-group  display-inline  pull-right">
                <a href="@Url.Action("Delete", "Log")" class="btn btn-danger" data-toggle="fb-modal">Delete logs</a>

            </span>
    </legend>
    @{ Html.RenderPartial("Filter", query); }
</fieldset>
@if (Model.Count == 0)
{
    @:No logs.
        }
else
{
    <table class="table table-striped table-condensed" style="overflow: scroll">
        <thead>
            <tr>
                <th>Date
                </th>
                <th>Message
                </th>
                <th>Type
                </th>
                <th>Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>
                        @entry.CreatedOn.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @entry.Message
                    </td>
                    <td>
                        @entry.Type
                    </td>
                    <td>
                        @Html.ActionLink("Show", "Show", new { id = entry.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@Html.Pager(Model, "Index", i => new { page = i })
