@using MrCMS.Helpers
@using MrCMS.Logging
@model MrCMS.Paging.IPagedList<MrCMS.Logging.Log>

@{
    ViewBag.Title = "Logs";
}

<div class="row-fluid">
    <div class="span4">
        <h1>Logs</h1>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginForm())
            {
                @Html.DropDownList("type", Enum.GetValues(typeof(LogEntryType)).OfType<LogEntryType>().BuildSelectItemList(type => type.ToString(), type => type.ToString(), type => type.ToString() == Request["type"], "All"))
                <p></p>

                <div class="btn-group">
                    <a href="@Url.Action("Delete", "Log")" class="btn btn-danger" data-toggle="fb-modal">Delete logs</a>
                    <input class="btn btn-primary" type="submit" value="Update" />
                </div>

            
            }
        
        @if (Model.Count == 0)
        {
            @:No logs.
        }
        else
        {
            <table class="table table-striped table-bordered" style="overflow: scroll">
        <tr>
            <th>Date
            </th>
            <th>Message
            </th>
            <th>Type 
            </th>
            <th>Actions
            </th>
        </tr>
        @foreach (var entry in Model)
        {
            <tr>
                <td>
                    @entry.CreatedOn.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @entry.Message
                </td>
                <td>
                    @entry.CreatedOn
                </td>
                <td>
                    @Html.ActionLink("Show", "Show", new { id = entry.Id })
                </td>
            </tr>
        }
    </table>
        }
        
    </div>
    
</div>

@Html.Pager(Model, "Index", i => new { page = i })