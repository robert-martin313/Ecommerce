@using MrCMS.Entities.Documents.Layout
@using MrCMS.Helpers
@model Layout
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Layout", FormMethod.Post, new { id = "edit-document" }))
{
    
    <fieldset>
        <legend>@Model.Name

            <span class="btn-group  display-inline  pull-right">
                @if (Model.CanDelete())
                {
                    <a href="@Url.Action("Delete", "Layout", new { id = Model.Id })" class="btn btn-danger" data-toggle="fb-modal">Delete</a>
                }
                <button class="btn btn-primary" id="save-edit">Save</button>

            </span>
        </legend>

        @if (TempData["saved"] != null)
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                @TempData["saved"]
            </div>
        }

        @Html.HiddenFor(x => x.Id)
        <div class="row-fluid">
            <div class="span12">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "span12" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "error" })

                @Html.LabelFor(x => x.UrlSegment, "Path")
                @Html.TextBoxFor(x => x.UrlSegment, new { @class = "span12" })
                @Html.ValidationMessageFor(x => x.UrlSegment, "", new { @class = "error" })
                <label class="checkbox">
                    @Html.CheckBoxFor(x => x.Hidden)  Hidden
                </label>
            </div>
        </div>
        <hr />
        <h4 class="light">Areas</h4>
        @{
        if (Model.LayoutAreas.Any())
        {
            <table class="table table-condensed table-striped">
                <tbody>
                    @foreach (LayoutArea area in Model.LayoutAreas)
                    {
                        <tr>
                            <td>
                                @area.AreaName
                                (@area.GetWidgets().Count())
                            </td>
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", "LayoutArea", new { id = area.Id }, new { @class = "btn btn-mini" })
                                    <a href="@Url.Action("Delete", "LayoutArea", new { id = area.Id })" class="btn btn-mini btn-danger" data-toggle="fb-modal">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            @:Click Add layout area to add the first area to this layout.
        }
        }

        <a href="@Url.Action("Add", "LayoutArea", new { id = Model.Id })" class="btn btn-mini" data-toggle="fb-modal">Add layout area</a>

    </fieldset>
}