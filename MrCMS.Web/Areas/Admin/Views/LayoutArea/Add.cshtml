@model MrCMS.Entities.Documents.Layout.LayoutArea
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
<div class="modal-header">
    <h3>
        Add layout area</h3>
</div>
@using (Html.BeginForm("Add", "LayoutArea", new {id = ""}, FormMethod.Post))
{
    <div class="modal-body">
        @Html.HiddenFor(x => x.Layout.Id)
        @Html.LabelFor(x => x.AreaName, "Area Name")
        @Html.EditorFor(x => x.AreaName)
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-success btn" value="Add layout area" />
    </div>
}