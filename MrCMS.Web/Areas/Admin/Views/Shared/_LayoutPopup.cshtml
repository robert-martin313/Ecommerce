@using MrCMS.Helpers
@using MrCMS.Website
@{
    Layout = "_LayoutRoot.cshtml";
    Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/popup.js");
}

<div class="row-fluid">
    <div class="span12" style="padding: 20px 20px 60px 20px">@RenderBody()</div>
</div>

<style type="text/css">
    body { padding-top: 0; }
</style>

<footer id="footer-popup">
    <hr>
    <img src="/Areas/Admin/Content/Images/logo.png" class="display-inline" style="margin-left: 20px;">
    <p class="display-inline">
        &copy; Mr CMS 2012-@CurrentRequestData.Now.Year - v@(Html.AssemblyVersion())
    </p>
</footer>


@if (IsSectionDefined("JavaScriptBlock"))
{
    @RenderSection("JavaScriptBlock")
}

