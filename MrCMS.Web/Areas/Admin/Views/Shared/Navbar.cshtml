@using MrCMS.Website
<div class="navbar navbar-fixed-top navbar-inverse mrcms-navbar">
    <div class="navbar-inner">
        <div class="container-fluid">
            <div class="nav-collapse">
                @{ Html.RenderAction("Get", "NavLinks");}
                <form class="navbar-search pull-left" action="@Url.Action("Index", "Search")" method="GET">
                    @Html.TextBox("term", "", new { @class = "search-query span2", placeholder = "Search", autocomplete = "off" })
                </form>
                <div class="nav pull-right">
                    @{ Html.RenderAction("Get", "SiteList"); }
                </div>
                @if (!CurrentRequestData.CurrentUser.DisableNotifications)
                {
                    Html.RenderAction("Navbar", "PersistentNotification");
                }
            </div>
        </div>
    </div>
</div>
