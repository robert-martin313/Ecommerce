@using MrCMS.Helpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutRoot.cshtml";
}

@Html.Hidden("controller-name", ViewData["controller-name"])
@{ Html.RenderPartial("Navbar"); }

<div class="container-mrcms">
    @{ Html.RenderPartial("AdminNavigation"); }
    <div class="main-content">
        <div class="inner-content">
            <section class="admin-header">
                @if (TempData.SuccessMessages().Any())
                {
                    <div class="alert alert-success">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        @string.Join("<br />",TempData.SuccessMessages())
                    </div>
                }
                @if (TempData.ErrorMessages().Any())
                {
                    <div class="alert alert-error">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        @string.Join("<br />",TempData.ErrorMessages())
                    </div>
                }
                @if (TempData.InfoMessages().Any())
                {
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        @string.Join("<br />",TempData.InfoMessages())
                    </div>
                }
            </section>
            @RenderBody()
        </div>
    </div>
</div>

<footer>
    <hr />
    <p>
        &copy; MrCMS 2012-@DateTime.UtcNow.Year - v@(Html.AssemblyVersion())
    </p>
</footer>
<!-- Le javascript  ( Placed at the end of the document so the pages load faster) -->

@if (IsSectionDefined("JavaScriptBlock"))
{
    DefineSection("JavaScriptBlock", () => Write(RenderSection("JavaScriptBlock")));
}