@using MrCMS.Helpers
@using MrCMS.Website
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @{
        Html.IncludeCss("~/Areas/Admin/Content/Styles/jquery.mrcms-mediaselector.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/jquery.fileupload-ui.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/jquery.treeview.css");
        Html.IncludeCss("~/Areas/Admin/Content/Editors/fancybox/jquery.fancybox-1.3.4.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/jquery.tagit.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/jquery-ui-bootstrap/jquery-ui-1.9.2.custom.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/bootstrap/css/bootstrap.css");
        Html.IncludeCss("~/Areas/Admin/Content/Styles/mrcms-admin.css");
    }
    @Html.RenderCss()
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"> </script><![endif]-->
</head>
<body>
    <div id="loading" style="display: none;"><img src="/Areas/Admin/Content/Images/ajax-loader2.gif" /></div>
    @RenderBody()
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"> </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"> </script>
    <script src="@Url.Content("~/Areas/Admin/Content/Editors/ckeditor/ckeditor.js")" type="text/javascript"> </script>
    @{
        //Validate
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.validate.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.validate.unobtrusive.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.unobtrusive-ajax.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MvcFoolproofJQueryValidation.min.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/mvcfoolproof.unobtrusive.min.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MicrosoftAjax.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MicrosoftMvcAjax.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MicrosoftMvcValidation.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MvcFoolproofValidation.min.js"); //client side validation
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/MicrosoftMvcJQueryValidation.js");
        //end validate
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.treeview.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.cookie.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.postback.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.contextMenu.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery-ui-timepicker-addon.js");
        Html.IncludeScript("~/Areas/Admin/Content/Styles/bootstrap/js/bootstrap.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/tmpl.min.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/load-image.min.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.iframe-transport.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.fileupload.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.fileupload-ui.js");
        Html.IncludeScript("~/Areas/Admin/Content/Editors/fancybox/jquery.easing-1.3.pack.js");
        Html.IncludeScript("~/Areas/Admin/Content/Editors/fancybox/jquery.mousewheel-3.0.4.pack.js");
        Html.IncludeScript("~/Areas/Admin/Content/Editors/fancybox/jquery.fancybox-1.3.4.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/tag-it.min.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.globalize/globalize.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/jquery.globalize/cultures/globalize.culture." + CurrentRequestData.CultureInfo.Name + ".js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/i18n/jquery.ui.datepicker-" + CurrentRequestData.CultureInfo.Name + ".js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/admin.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/tagging.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/search.js");
        Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/jquery.mrcms-mediaselector.js");
        
    }
    @Html.RenderScripts()

    @Html.Hidden("UICulture", CurrentRequestData.CultureInfo.Name)
    
    @if (IsSectionDefined("JavaScriptBlock"))
    {
        @RenderSection("JavaScriptBlock")
    }
</body>
</html>
