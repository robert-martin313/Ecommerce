@using MrCMS.Helpers
@model MrCMS.Web.Controllers.LoginController.LoginModel

<div class="container">
    @using (Html.BeginForm("Login", "UserLogin", new { Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <p>&nbsp;</p>
        <div class="row">
            <div class="span2">&nbsp;</div>
            <div class="span8">

                <div class="control-group">
                    <label class="control-label" for="Email">Email</label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Email)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Password">
                        Password</label>
                    <div class="controls">
                        @Html.PasswordFor(model => model.Password)
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            @Html.CheckBoxFor(model => model.RememberMe)
                            Remember me
                        </label>
                        <br/>
                        <input type="submit" value="Login" class="btn btn-info" />
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        @Html.ActionLink("Forgot password?", "ForgottenPassword","Login")
                    </div>
                </div>

                @if (!String.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-error">
                        @ViewBag.Message
                    </div>
                }

            </div>
            <div class="span2">
            </div>
        </div>
    }
</div>

@{ Html.IncludeScript("~/Themes/Ecommerce/Apps/Ecommerce/Content/Scripts/custom/user-login.js"); }