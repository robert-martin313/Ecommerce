@model MrCMS.Web.Apps.Ecommerce.Pages.Product

<ul class="breadcrumb">
<li><a href="#">Home</a> <span class="divider">/</span></li>
<li><a href="#">Products</a> <span class="divider">/</span></li>
<li class="active">@Model.Name</li>
</ul>

<div class="row-fluid">
    <div class="span8">
        <div class="row-fluid">
        <div class="span4">
            @if (Model.Images.Count() > 0)
            {
                <img src="@(Model.Images.First<MrCMS.Entities.Documents.Media.MediaFile>().FileUrl)" />
            }
            <br /><br />
            <div class="clearfix"></div>
            <div id="product-image-thumbnails">
            <ul class="thumbnails">
            @foreach(var item in Model.Images)
            {
                <li class="span3">
                <img src="@(item.FileUrl)" />
                    </li>
            }
           </ul>
                </div>
        </div>
        <div class="span8">
            <h3>@Model.Name</h3>
            Exclusive price
            <h1 class="product-price">
                    &pound;
                    @if (Model.PricePreTax == 0 && Model.Variants.Count > 0)
                    {
                        @(Model.Variants.OrderBy(x=>x.Price).First<MrCMS.Web.Apps.Ecommerce.Entities.Products.ProductVariant>().Price)
                    }
                    else
                    {
                        @Model.PricePreTax
                    }
                </h1>
            <span>shop price: <span style="text-decoration:line-through">&pound;@(Model.PreviousPrice.HasValue?Model.PreviousPrice.Value.ToString("#.##"):"")</span></span>
            <br /> <br />
            <div>@(Model.Abstract.Length>255?Model.Abstract.Substring(0,250)+"...":Model.Abstract)</div>
            <br />
            <div id="mail-print-buttons">
            <i class="icon-envelope"></i> <i class="icon-print"></i>
            </div> 
            @*TWITTER*@
            <a href="https://twitter.com/share" class="twitter-share-button" data-url="@this.Request.Url.AbsoluteUri" data-count="none" data-hashtags="products">Tweet</a>
            <script>!function (d, s, id) { var js, fjs = d.getElementsByTagName(s)[0], p = /^http:/.test(d.location) ? 'http' : 'https'; if (!d.getElementById(id)) { js = d.createElement(s); js.id = id; js.src = p + '://platform.twitter.com/widgets.js'; fjs.parentNode.insertBefore(js, fjs); } }(document, 'script', 'twitter-wjs');</script>
            @*PINTEREST*@
            <a href="//pinterest.com/pin/create/button/" data-pin-do="buttonBookmark" ><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png" /></a>
            @*FB*@
            <div class="fb-like" data-href="@this.Request.Url.AbsoluteUri" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>
            
            </div>
    </div>
        <hr />
        <h4>Full Description</h4>
        <p>
             @(new HtmlString(Model.BodyContent))
        </p>
        <br />
            <div class="row-fluid">
                <ul class="nav nav-tabs nav-stacked return-delivery-box span6">
                   <li>
                       <a href="#">Delivery Details <i class="icon-chevron-right pull-right"></i></a>
                   </li>
                    <li>
                       <a href="#">Returns Information <i class="icon-chevron-right pull-right"></i></a>
                   </li>
             </ul>
                </div>
        <br />
    </div>
    <div class="span4">
        @if (Model.AttributeOptions.Count > 0)
        {
            foreach (var option in Model.AttributeOptions)
            {
                <pre class="product-specifications-filter">
                <label class="pull-left">Select @option.Name&nbsp;</label>
                <select class="pull-right">
                    @foreach (var optionValue in option.Values)
                    {
                        <option value="@optionValue.Id">@optionValue.Value</option>
                    }
                </select>
               </pre>
            }
        }
        @if (Model.PriceBreaks.Count() > 0)
        {
            <span class="product-specifications-filter">
                PRICE BREAKS - The more you buy, the more you save.
            </span>
            <br /><br />
             <table class="table table-bordered table-condensed">
                 <tr>
                     <th>Quantity</th>
                     <th>Price</th>
                 </tr>
            @foreach (var item in Model.PriceBreaks)
            {
                 <tr>
                     <td>@item.Quantity</td>
                     <td>&pound;@item.Price.ToString("#.##")</td>
                 </tr> 
            }
            </table>
        }

        <hr />
        @if(Model.SpecificationValues.Count>0)
        {
            <h4>Specifications</h4>
            <table class="table table-bordered table-striped table-condensed">
            @foreach (var item in Model.SpecificationValues)
            {
                 <tr>
                     <td><strong>@item.Option.Name</strong></td>
                     <td>@item.Value</td>
                 </tr>
            }
             </table>
        }
    </div>
</div>