@using MrCMS.Helpers
@model dynamic
@{
    Layout = "~/Apps/Ecommerce/Views/Shared/_PasswordLayout.cshtml";
}	

<div class="container">
        @using (Html.BeginForm("ForgottenPassword", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <p>&nbsp;</p>
            <div class="row">
                <div class="span3">&nbsp;</div>
                <div class="span6">
                    <div class="control-group">
                        <div class="controls">
                            <h4>Forgotten Password?</h4>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Email">Email</label>
                        <div class="controls">
                            @Html.TextBox("Email",null,new { @class="input-xlarge"})
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <input type="submit" value="Recover password" class="btn btn-info" />
                        </div>
                    </div>
                </div>
                <div class="span3">&nbsp;</div>
            </div>
        }
    </div>
 @{ Html.IncludeScript("~/Themes/Ecommerce/Content/Scripts/custom/forgotten-password.js"); }