                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="container hidden-phone">
        <div class="row-fluid">
            <div class="span3 padding-top-bottom-10 logo-con">
                @RenderZone("Header left")
            </div>
            <div class="span6 padding-top-bottom-20 margin-top-13">
                @RenderZone("Header Middle")
            </div>
            <div class="span3">
                <div class="text-align-right header-links padding-top-bottom-5">
                    @RenderZone("User Links")
                </div>
                <div class="clearfix">
                </div>
                <div class="row-fluid padding-top-bottom-5 basket-items">
                    <div class="span12">
                        @RenderZone("Header Right")
                        <div class="clearfix"></div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
    <div class="menu-con hidden-phone">
        <div class="container">
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="pull-left">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </span>
                        <span class="pull-left section">Menu
                        </span>
                    </a>
                    <div class="nav-collapse collapse">
                        @RenderZone("Navigation")
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
