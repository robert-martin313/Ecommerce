@model dynamic

@using (Html.BeginForm("PayPalExpressCheckout", "PaymentMethod", FormMethod.Post))
{
    <div class="border-grey margin-bottom-20">
        <div class="padding-20 grey-background">
            <div class="row-fluid">
                <div class="span12 align-center">
                    <p>
                        Click “Place order” button to complete your order
                    </p>
                    <div class="row-fluid">
                        <div class="span3">
                        </div>
                        <div class="span6">
                            <div class="row-fluid">
                                <input type="submit" class="btn red-gradient span12" value="Place Order" />
                            </div>
                        </div>
                        <div class="span3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}