@model MrCMS.Web.Apps.Ecommerce.Models.CartModel
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Ecommerce.Helpers
@using MrCMS.Web.Apps.Ecommerce.Pages

<div class="row-fluid">
    <div class="span8 top-basket no-margin-left text-align-center">
        <div id="basket-info-box">
            <img src="/Themes/Ryness/Content/Images/basket.jpg" alt="Basket" />
            @if (Model.ItemQuantity > 0)
            {
                <a href="@(UniquePageHelper.GetUrl<Cart>())">Your basket has @Model.ItemQuantity<span>&nbsp;@(Model.ItemQuantity == 1 ? "item" : "items").<br />
                    @Model.Total.ToCurrencyFormat()</span></a>
            }
            else
            {
                <span style="line-height: 44px;">Your basket has 0 items.</span>
            }
        </div>
    </div>
    <div class="span4 no-margin-left top-checkout">
        <div class="row-fluid">
            <a class="generic-button green-gradient span12 text-align-center" href="@(UniquePageHelper.GetUrl<EnterOrderEmail>())">Checkout</a>
        </div>
    </div>
</div>
