@model MrCMS.Web.Apps.Articles.Entities.AuthorInfo
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Add", "AuthorInfo", new { id = "" }, FormMethod.Post))
{
    <div class="modal-header">
        <h3>Add Author Info</h3>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(info => info.User.Id)
        @Html.LabelFor(info => info.Bio)
        @Html.TextAreaFor(info => info.Bio)
        @Html.ValidationMessageFor(info => info.Bio)
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Add Author Info" />
    </div>
}