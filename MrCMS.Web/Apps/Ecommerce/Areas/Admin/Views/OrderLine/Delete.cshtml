@model MrCMS.Web.Apps.Ecommerce.Entities.Orders.OrderLine

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Delete", "OrderLine", FormMethod.Post))
{
     @Html.HiddenFor(x => x.Id)
    <div class="modal-header">
        <h3>Delete Order Line</h3>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this line ? Deleting this item can not be undone.
        <br />
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Delete Order Line" />
    </div>
}