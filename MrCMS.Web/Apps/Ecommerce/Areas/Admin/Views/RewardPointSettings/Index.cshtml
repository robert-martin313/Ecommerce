@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Settings.RewardPointSettings

@{
    ViewBag.Title = "Reward Point Settings";
}
@using (Html.BeginForm("Index", "RewardPointSettings", FormMethod.Post))
{
    <fieldset>
        <legend>
            Paypoint Settings
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn btn-primary" value="Save" />
            </span>
        </legend>
        <div class="form-group">
            @Html.LabelFor(settings => settings.ExchangeRate)
            @Html.TextBoxFor(settings => settings.ExchangeRate, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.MinimumUsage)
            @Html.TextBoxFor(settings => settings.MinimumUsage, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.PointsForRegistration)
            @Html.TextBoxFor(settings => settings.PointsForRegistration, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.PointsPerPurchase)
            @Html.TextBoxFor(settings => settings.PointsPerPurchase, new {@class = "form-control"})
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.StatusToAward)
            @Html.EnumDropDownListFor(settings => settings.StatusToAward, new {@class = "form-control"})
        </div>
        
    </fieldset>
}