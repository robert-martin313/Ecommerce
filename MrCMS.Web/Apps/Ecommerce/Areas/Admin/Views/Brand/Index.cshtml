@using MrCMS.Helpers
@model MrCMS.Paging.IPagedList<MrCMS.Web.Apps.Ecommerce.Entities.Products.Brand>
@{
    ViewBag.Title = "Brands";
}

@{ Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/brands.js");}

<div class="row-fluid">
    <div class="span12">
        <h2>Brands</h2>
    </div>
</div>

<div class="row-fluid">
    <div class="span4">
    @using (Html.BeginForm("Index", "Brand", FormMethod.Get))
    {
         <input type="text" class="search-query" placeholder="Search" id="searchParam" name="searchParam" />
    }
    </div>
      <div class="span8">
        <div class="btn-group  display-inline  pull-right">
            <a href="@Url.Action("Add", "Brand")" class="btn btn-primary"  data-toggle="fb-modal">Add Brand</a>
        </div>
    </div>
</div>
<div class="row-fluid">
  
       @if (Model.Count == 0)
        {
            @:No brands.
        }
        else
        {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name
                    </th>
                     <th>Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                          <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", "Brand", new { id = item.Id }, new { @class = "btn btn-mini", data_toggle = "fb-modal"  })
                                 @Html.ActionLink("Delete", "Delete", "Brand", new { id = item.Id }, new { @class = "btn btn-mini btn-danger", data_toggle = "fb-modal" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
       }
  </div>

@Html.Pager(Model, "Index", i => new { page = i })