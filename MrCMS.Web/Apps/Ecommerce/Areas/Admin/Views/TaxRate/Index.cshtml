@using MrCMS.Web.Apps.Ecommerce.Settings
@{
    ViewBag.Title = "Tax Rates";
}

<div class="row-fluid">
    <div class="span4">
        <h2>Tax Rates</h2>
    </div>
    <div class="span8">
        <div class="btn-group  display-inline  pull-right">
            <a href="@Url.Action("Add", "TaxRate")" class="btn btn-primary" data-toggle="fb-modal">Add Tax Rate</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name
            </th>
            <th>Code
            </th>
            <th>Rate Percentage
            </th>
            <th>Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rate in Model)
        {
            <tr>
                <td>
                    @rate.Name
                </td>
                <td>
                    @rate.Code
                </td>
                <td>
                    @rate.Percentage
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edit", "Edit", new { id = rate.Id }, new { @class = "btn btn-mini" })
                        @Html.ActionLink("Delete", "Delete", new { id = rate.Id }, new { @class = "btn btn-danger btn-mini", data_toggle = "fb-modal" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    <h3>Tax Settings</h3>
    @{ Html.RenderPartial("Settings", ViewData["settings"] as TaxSettings);}