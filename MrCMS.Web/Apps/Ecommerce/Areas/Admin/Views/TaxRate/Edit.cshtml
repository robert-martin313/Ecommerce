@model MrCMS.Web.Apps.Ecommerce.Entities.Tax.TaxRate
@{
    ViewBag.Title = "Edit " + Model.Name;
}

@using (Html.BeginForm("Edit", "TaxRate", FormMethod.Post, new {id = "edit-tax-rate"}))
{
    <fieldset>
        <legend>
            Edit - @Model.Name
            <span class="btn-group  display-inline  pull-right">
                @Html.ActionLink("Back to list", "Index", "TaxRate", null, new {@class = "btn btn-default"})
                <input class="btn btn-primary" id="save-edit" data-action="save" data-form-id="edit-tax-rate" type="submit" value="Save" /> 
            </span>
        </legend>
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Code)
            @Html.TextBoxFor(x => x.Code, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Code)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Percentage)
            @Html.TextBoxFor(x => x.Percentage, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Percentage)
        </div>
    </fieldset>
}