@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Payment.CharityClear.CharityClearSettings
@{
    ViewBag.Title = "Charity Clear Settings";
}
@using (Html.BeginForm("Save", "CharityClearSettings", FormMethod.Post))
{
    <fieldset>
        <legend>
            Charity Clear Settings
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn btn-primary" value="Save" />
            </span>
        </legend>
        <div class="form-group">
            @Html.InlineCheckboxFor(settings => settings.Enabled)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.MerchantId)
            @Html.TextBoxFor(settings => settings.MerchantId, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.MerchantId)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.MerchantPassword)
            @Html.TextBoxFor(settings => settings.MerchantPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.MerchantPassword)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.SignatureKey)
            @Html.TextBoxFor(settings => settings.SignatureKey, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.SignatureKey)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.ISOCountryCode)
            @Html.TextBoxFor(settings => settings.ISOCountryCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.ISOCountryCode)
        </div>
        <div class="form-group">
            @Html.LabelFor(settings => settings.DisplayName)
            @Html.TextBoxFor(settings => settings.DisplayName, new { @class = "form-control" })
            @Html.ValidationMessageFor(settings => settings.DisplayName)
        </div>
    </fieldset>
}


