@model MrCMS.Web.Apps.Ecommerce.Entities.Shipping.UKCourierShippingCalculation
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Delete", "UKCourierShippingCalculation", FormMethod.Post))
{
    <fieldset>
        <legend>
            Delete Shipping Calculation
            <span class="btn-group display-inline pull-right">
                <input type="submit" class="btn-primary btn" value="Delete" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)

        <p>
            Are you sure you want to delete this calculation? Deleting it can not be undone.
        </p>
    </fieldset>
}