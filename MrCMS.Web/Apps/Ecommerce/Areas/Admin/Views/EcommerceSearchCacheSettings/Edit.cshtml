@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Settings.EcommerceSearchCacheSettings
@{
    ViewBag.Title = "Edit Ecommerce Search Cache Settings";
}
@using (Html.BeginForm("Edit", "EcommerceSearchCacheSettings", FormMethod.Post))
{
    <fieldset>
        <legend>
            Ecommerce Search Cache Settings
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Save Settings" />
            </span>
        </legend>
        @Html.HiddenFor(settings => settings.SiteId)
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.SearchCacheExpiryType, "Search Cache Expire Type", new { @class = "control-label" })
                    @Html.EnumDropDownListFor(x => x.SearchCacheExpiryType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.SearchCacheExpiryType)
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.SearchCacheLength)
                    @Html.TextBoxFor(x => x.SearchCacheLength, new { @class = "form-control", placeholder = "0" })
                    @Html.ValidationMessageFor(x => x.SearchCacheLength)
                </div>
                <div class="form-group">
                    @Html.InlineCheckboxFor(x => x.SearchCache, null, null, "Search Cache")
                </div>
                <div class="form-group">
                    @Html.InlineCheckboxFor(x => x.SearchCachePerUser, null, null, "Search Cache Per User")
                </div>
            </div>
            <div class="col-lg-6">

            </div>
        </div>
    </fieldset>
}