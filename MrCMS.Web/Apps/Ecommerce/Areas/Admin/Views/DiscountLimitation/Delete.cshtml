@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Entities.Discounts.DiscountLimitation

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
    Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/discount-limitation.js");
}	   
@using (Html.BeginForm("Delete", "DiscountLimitation", FormMethod.Post, new { data_discount_limitation = "true" }))
{
    <fieldset>
        <legend>
            Delete Limitation
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Delete" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)
        <p>
            Are you sure you want to delete this limitation? Deleting can not be undone.
        </p>
    </fieldset>
}
