@model MrCMS.Web.Apps.Ecommerce.Entities.ProductVariant

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Delete", "ProductVariant", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Delete Product Variant</h3>
    </div>
    <div class="modal-body">
        Are you sure you want to delete the product variant with SKU @Model.SKU? Deleting this variant can not be undone.
        <br />
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Delete product variant" />
    </div>
}