@model MrCMS.Web.Apps.Ecommerce.Entities.Products.ProductVariant
@using MrCMS.Helpers
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Add", "ProductVariant", new {id = ""}, FormMethod.Post))
{
    <fieldset>
        <legend>
            Add Product Variant
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Add Product Variant" />
            </span>
        </legend>

        <div class="row-fluid">
            @Html.HiddenFor(variant => variant.Product.Id)
            @Html.LabelFor(variant => variant.Name)
            @Html.TextBoxFor(variant => variant.Name, new {@class = "span12"})
        </div>
        <div class="row-fluid">
            @for (var index = 0; index < Model.Product.AttributeOptions.Count; index++)
            {

                var sc = 2;
                switch (Model.Product.AttributeOptions.Count)
                {
                    case 3:
                        sc = 4;
                        break;
                    case 2:
                        sc = 6;
                        break;
                    default:
                        sc = 12;
                        break;
                }

                var option = Model.Product.AttributeOptions[index];

                <div class='@Html.Raw("span" + sc)'>
                    @Html.LabelFor(variant => variant.AttributeValues[index].Value, option.Name)
                    @Html.TextBoxFor(variant => variant.AttributeValues[index].Value, new {@class = "span12"})
                    @Html.Hidden("AttributeValues[" + index + "].Id", Model.AttributeValues[index].Id)
                    @Html.Hidden("AttributeValues[" + index + "].ProductAttributeOption.Id", option.Id.ToString())
                </div>
            }
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(variant => variant.SKU)
                @Html.TextBoxFor(variant => variant.SKU, new {@class = "span12"})
            </div>
            <div class="span6">
                @Html.LabelFor(variant => variant.Barcode)
                @Html.TextBoxFor(variant => variant.Barcode, new {@class = "span12"})
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(variant => variant.BasePrice)
                @Html.TextBoxFor(variant => variant.BasePrice, new {@class = "span12"})
            </div>
            <div class="span6">
                @Html.LabelFor(variant => variant.PreviousPrice)
                @Html.TextBoxFor(variant => variant.PreviousPrice, new {@class = "span12"})
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(variant => variant.StockRemaining)
                @Html.TextBoxFor(variant => variant.StockRemaining, new {@class = "span12"})
            </div>
            <div class="span6">
                @Html.LabelFor(product => product.TrackingPolicy)
                @Html.DropDownListFor(product => product.TrackingPolicy, ViewData["tracking-policy"] as IEnumerable<SelectListItem>, new {@class = "span12"})
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(variant => variant.Weight)
                @Html.TextBoxFor(variant => variant.Weight, new {@class = "span12"})
            </div>
            <div class="span6">
                @if (!MrCMS.Website.MrCMSApplication.Get<MrCMS.Web.Apps.Ecommerce.Settings.TaxSettings>().LoadedPricesIncludeTax)
                {
                    @Html.LabelFor(product => product.TaxRate.Id, "Tax Rate")
                    @Html.DropDownListFor(product => product.TaxRate.Id, ViewData["tax-rate-options"] as IEnumerable<SelectListItem>, new {@class = "span12"})
                }
            </div>
        </div>
    </fieldset>
}

@{ Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/product-variant.js"); }