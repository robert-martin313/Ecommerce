@model MrCMS.Web.Apps.Ecommerce.Pages.Category

<div id="hidden-specifications">
    <div class="row-fluid">
        <div class="span6">
            <h4>Hidden Search Specifications</h4>
        </div>
        <div class="span6">
            <div class="btn-group pull-right">
                @Html.ActionLink("Add", "AddSpecification", "Category", new { id = Model.Id }, new { @class = "btn btn-mini", data_toggle = "fb-modal" })
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            @if (Model.HiddenSearchSpecifications.Any())
            {
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attribute in Model.HiddenSearchSpecifications)
                        {
                            <tr>
                                <td>@attribute.Name</td>
                                <td>@Html.ActionLink("Remove", "RemoveSpecification", "Category", new { categoryId = Model.Id, id = attribute.Id }, new { @class = "btn btn-danger btn-mini pull-right", data_action = "remove-category-hidden-specification" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Please click add to hide a specification.</p>
            }
        </div>
    </div>
</div>
