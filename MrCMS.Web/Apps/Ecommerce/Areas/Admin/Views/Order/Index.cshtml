@using MrCMS.Helpers
@using MrCMS.Logging
@model MrCMS.Paging.IPagedList<MrCMS.Web.Apps.Ecommerce.Entities.Orders.Order>
@{
    ViewBag.Title = "Orders";
}

<fieldset>
    <legend>Orders
    </legend>
    @if (Model.Count == 0)
    {
        @:No orders.
        }
    else
    {
        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>User
                    </th>
                    <th>Subtotal
                    </th>
                    <th>Tax
                    </th>
                    <th>Discount Code
                    </th>
                    <th>Total
                    </th>
                    <th>Total after Refunds
                    </th>
                    <th>Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(item.User != null ? item.User.Name : String.Empty)
                        </td>
                        <td>
                            @item.Subtotal.ToString("C")
                        </td>
                        <td>
                            @item.Tax.ToString("C")
                        </td>
                        <td>
                            @item.DiscountCode
                        </td>
                        <td>
                            @item.Total.ToString("C")
                        </td>
                        <td>
                            @item.TotalAfterRefunds.ToString("C")
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", "Order", new { id = item.Id }, new { @class = "btn btn-mini" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    @Html.Pager(Model, "Index", i => new { page = i })
</fieldset>

