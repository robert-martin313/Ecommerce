@model MrCMS.Web.Apps.Ecommerce.Entities.Orders.Order

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Cancel", "Order", FormMethod.Post))
{
    <fieldset>
        <legend>Cancel Order
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Cancel Order" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)
         
        <p>
            Are you sure you want to cancel the order ? Cancelling this order will void payment and cancel shipping.
        </p>
    </fieldset>
}