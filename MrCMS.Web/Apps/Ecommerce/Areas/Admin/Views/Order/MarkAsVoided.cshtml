@model MrCMS.Web.Apps.Ecommerce.Entities.Orders.Order

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("MarkAsVoided", "Order", FormMethod.Post))
{
    <fieldset>
        <legend>Set Order Payment as Void
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Set Order Payment as Void" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)
        
        <p>
            Are you sure you want to mark order payment void?
        </p>
    </fieldset>
}