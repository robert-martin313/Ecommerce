@using MrCMS.Web.Apps.Ecommerce.Helpers
@model MrCMS.Web.Apps.Ecommerce.Entities.Orders.Order
<hr />
           <h4>Order Items</h4>
<div class="row-fluid">
    <div class="span12">
        @if (Model.OrderLines.Count == 0)
        {
            @:No lines.
            }
        else
        {
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Product
                        </th>
                        <th>SKU
                        </th>
                        <th>Quantity
                        </th>
                        <th>Unit Price
                        </th>
                        <th>Subtotal
                        </th>
                        <th>Tax
                        </th>
                        <th>Discount
                        </th>
                        <th>Weight
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderLines)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @if(!String.IsNullOrWhiteSpace(item.SKU))
                                {
                                     @item.SKU
                                }
                                else if (item.ProductVariant != null)
                                {
                                    @item.ProductVariant.SKU
                                }
                            </td>
                            <td>
                                @item.Quantity.ToString("n2")
                            </td>
                            <td>
                                @item.UnitPrice.ToCurrencyFormat()
                            </td>
                            <td>
                                @item.Subtotal.ToCurrencyFormat()
                            </td>
                            <td>
                                @item.Tax.ToCurrencyFormat()
                            </td>
                            <td>
                                @item.Discount.ToCurrencyFormat()
                            </td>
                            <td>
                                @item.Weight.ToString("n2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
