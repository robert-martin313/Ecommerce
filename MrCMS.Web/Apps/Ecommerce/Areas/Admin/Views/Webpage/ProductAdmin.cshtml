            <li><a href="#permissions-front-end" data-toggle="tab">Front end</a></li>
            <li><a href="#permissions-admin" data-toggle="tab">Admin</a></li>
        </ul>
    </li>
    <li><a href="#preview" data-toggle="tab">Preview</a></li>
</ul>
<div class="row-fluid">

    @using (Html.BeginForm("Edit", "Webpage", FormMethod.Post, new { id = "edit-document" }))
    {
        <div class="tab-content">
            @{Html.RenderPartial("Properties", Model);}
            @{Html.RenderPartial("ProductProperties", Model);}
            @{Html.RenderPartial("Variants", Model);}
            @{Html.RenderPartial("SEO", Model);}
            @{Html.RenderPartial("Layout", Model); }
            @{Html.RenderPartial("FormBuilder", Model);}
            @{Html.RenderPartial("FormPostings", Model);}
            @{Html.RenderPartial("FormMessage", Model);}
            @{Html.RenderPartial("PageVersions", Model);}
            @{Html.RenderPartial("PermissionsFrontEnd", Model);}
            @{Html.RenderPartial("PermissionsAdmin", Model);}
            @{Html.RenderPartial("Preview", Model);}
        </div>
    }
</div>
@{ Html.IncludeScript("~/Areas/Admin/Content/Scripts/custom/edit-webpage.js"); }