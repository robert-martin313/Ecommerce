@model MrCMS.Web.Apps.Ecommerce.Pages.Product
<div class="row">
    <div class="col-lg-3">
        <div id="brands">
            @{Html.RenderAction("Brands", "Product", new { id = Model.Id, brandId = Model.Brand != null ? Model.Brand.Id.ToString() : String.Empty });}
        </div>
    </div>
    <div class="col-lg-9">
        @Html.LabelFor(product => product.Abstract)
        @Html.TextAreaFor(product => product.Abstract, new { rows = 4, @class = "form-control" })
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-6">
        <h4>Prices and Variants</h4>
    </div>
    <div class="col-lg-6">
        @{ Html.RenderAction("PricingButtons", "Product", new { id = Model.Id });}
    </div>
</div>
@{ Html.RenderAction("PricingInfo", "Product", new { id = Model.Id }); }
<hr />
<div class="row">
    <div class="col-lg-6">
        @{Html.RenderAction("Categories", "Product", new { id = Model.Id });}
    </div>
    <div class="col-lg-6">
        @{Html.RenderAction("Specifications", "Product", new { id = Model.Id });}
    </div>
</div>
<hr />
@{ Html.RenderAction("Images", "Product", new { id = Model.Id }); }
<hr />
@{ Html.RenderAction("RelatedProducts", "Product", new { id = Model.Id }); }