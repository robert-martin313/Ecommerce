@model MrCMS.Web.Apps.Ecommerce.Entities.Shipping.ShippingCalculation
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Add", "ShippingCalculation", new {id = ""}, FormMethod.Post, new {id = "add-shipping-calculation"}))
{
    <fieldset>
        <legend>
            Add Shipping Calculation
            <span class="btn-group  display-inline  pull-right">
                <button class="btn btn-primary" id="save-add" data-action="save" data-form-id="add-shipping-calculation">
                    Save & Close</button>
            </span>
        </legend>

        @Html.HiddenFor(x => x.Country.Id)
        
        <div class="row-fluid">
            <div class="span12">
                @Html.LabelFor(x => x.ShippingMethod)
                @Html.DropDownListFor(x => x.ShippingMethod.Id, ViewData["shipping-methods"] as IEnumerable<SelectListItem>, new {@class = "span12"})
                @Html.ValidationMessageFor(x => x.ShippingMethod)
                @Html.LabelFor(x => x.ShippingCriteria)
                @Html.DropDownListFor(x => x.ShippingCriteria, ViewData["criterias"] as IEnumerable<SelectListItem>, new {@class = "span12"})
                @Html.ValidationMessageFor(x => x.ShippingCriteria)
                @Html.LabelFor(x => x.LowerBound)
                @Html.TextBoxFor(x => x.LowerBound, new {@class = "input-xlarge"})
                @Html.LabelFor(x => x.UpperBound)
                @Html.TextBoxFor(x => x.UpperBound, new {placeholder = "leave blank if is no upper bound", @class = "input-xlarge"}) 
                @Html.LabelFor(x => x.BaseAmount)
                @Html.TextBoxFor(x => x.BaseAmount, new {@class = "input-xlarge"})
                @Html.ValidationMessageFor(x => x.BaseAmount)
            </div>
        </div>
        @if (!String.IsNullOrWhiteSpace(ViewBag.Message))
        {
            <br/>
            <p>
                @ViewBag.Message
            </p>
            <br/>
        }

        <div class="row-fluid">
            <div class="span12">
                @Html.ValidationMessageFor(x => x.LowerBound)
            </div>
        </div>
    </fieldset>
}