@model MrCMS.Web.Apps.Ecommerce.Models.MakeMultivariantModel
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("MakeMultiVariant", "Product", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Make Multi-Variant</h3>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(model => model.ProductId)
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(model => model.Option1)
                @Html.TextBoxFor(model => model.Option1)
            </div>
            <div class="span6">
                @Html.LabelFor(model => model.Option1Value)
                @Html.TextBoxFor(model => model.Option1Value)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(model => model.Option2)
                @Html.TextBoxFor(model => model.Option2)
            </div>
            <div class="span6">
                @Html.LabelFor(model => model.Option2Value)
                @Html.TextBoxFor(model => model.Option2Value)
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(model => model.Option3)
                @Html.TextBoxFor(model => model.Option3)
            </div>
            <div class="span6">
                @Html.LabelFor(model => model.Option3Value)
                @Html.TextBoxFor(model => model.Option3Value)
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Make multi-variant" />
    </div>
}