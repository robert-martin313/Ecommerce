@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Models.ProductPagedList
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
@if (Model != null)
{
    <div class="row-fluid">
        <div class="btn-group display-inline pull-right">
            <a href="@Url.Action("Add", "Webpage", new { id = Model.ProductContainerId })" class="btn btn-primary">Add Product</a>
        </div>
    </div>
    <div class="row-fluid">
        <div id="product-list">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name
                        </th>
                        <th>Price
                        </th>
                        <th>Stock remaining
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @product.Name
                            </td>
                            <td>
                                @product.Price.ToString("0.00")
                            </td>
                            <td>
                                @(product.StockRemaining.HasValue ? product.StockRemaining.ToString() : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Pager(Model, "Index", p => new { p }, PagedListRenderOptions.PageNumbersOnly)
        </div>
    </div>
}
else
{
    <p>Before you can add products, you need to add a Product Container to the navigation tree</p>    
}