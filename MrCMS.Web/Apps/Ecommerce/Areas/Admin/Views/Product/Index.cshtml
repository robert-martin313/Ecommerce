@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Models.ProductPagedList
@{
    ViewBag.Title = "Products";
}

@if (Model != null)
{
    <form>
        <fieldset>
            <legend>Products
            <span class="btn-group  display-inline  pull-right">
                <a href="@Url.Action("Add", "Webpage", new { id = Model.ProductContainerId })" class="btn btn-success">Add Product</a>
            </span>
            </legend>
            <table class="table table-condensed table-striped">
                <thead>
                    <tr>
                        <th>Name
                        </th>
                        <th>Price
                        </th>
                        <th>Stock remaining
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(product.Name, "Edit", "Webpage", new { id = product.Id }, null)
                            </td>
                            <td>
                                @product.Price.ToString("0.00")
                            </td>
                            <td>
                                @(product.StockRemaining.HasValue ? product.StockRemaining.ToString() : "-")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Pager(Model, "Index", p => new { p }, PagedListRenderOptions.PageNumbersOnly)
        </fieldset>
    </form>
}
else
{
    <h2>Products</h2>
    <p>Before you can add products, you need to add a Product Search to the navigation tree (Right-click on the Root item)</p>    
}