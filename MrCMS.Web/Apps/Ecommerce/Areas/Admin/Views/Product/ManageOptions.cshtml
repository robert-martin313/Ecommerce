@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Pages.Product
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}
<fieldset>
    <legend>Manage Product Options
    </legend>
    @Html.Hidden("product-id", Model.Id)

    <div class="row-fluid">
        <div class="span6">
            @{ Html.RenderAction("AddProductOption", "Product", new { id = Model.Id });}

            <div id="new-product-option" style="display: none;">
                @{ Html.RenderAction("Add", "ProductOption");}
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            @{ Html.RenderAction("ProductOptions", "Product", new { id = Model.Id });}
        </div>
    </div>
</fieldset>
@{Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/manage-options.js");}