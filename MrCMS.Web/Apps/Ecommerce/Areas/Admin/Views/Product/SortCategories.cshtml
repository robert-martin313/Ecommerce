@model List<MrCMS.Models.SortItem>
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}

@section JavaScriptBlock
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#sortable").sortable({
                update: function (event, ui) {
                    $('#sortable li').each(function (index, domElement) {
                        $(domElement).find('[name*="Order"]').val(index);
                    });
                }
            });
        });
    </script>
}
@using (Html.BeginForm("SortCategories", "Product", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Sort Product Specification Atrribute Options</h3>
    </div>
    <div class="modal-body">
         @Html.Hidden("productId", ((MrCMS.Web.Apps.Ecommerce.Pages.Product)ViewBag.Product).Id)
         <ul id="sortable">
            @if (Model.Any())
            {
                for (int i = 0; i < Model.Count; i++)
                {
                <li>
                    @Html.HiddenFor(model => model[i].Id)
                    @Html.HiddenFor(model => model[i].Order)
                    <i class="icon-resize-full"></i>&nbsp;&nbsp;
                    @Model[i].Name
                </li>
                }
            }
            else
            {
                <li>No specifications to sort.</li>
            }
        </ul>
    </div>
    <div class="modal-footer">
            <button class="btn btn-primary" id="submit">
        Save & Close</button>
    </div>
}