@using MrCMS.Entities.Documents.Media
@model MediaCategory

@if (Model != null && Model.Files.Count > 0)
{
    foreach (var file in Model.Files)
    {
        <tr>
            <td>@Html.CheckBox(@file.Id.ToString(), true, null)</td>
            <td><img style="height: 50px; width: auto;" src="@file.FileUrl" alt=""/></td>
        </tr>
    }
}