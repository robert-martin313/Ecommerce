@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Pages.Product
<div id="image-list">
    <div class="row">
        <div class="col-lg-6">
            <h4>Product Images</h4>
        </div>
        <div class="col-lg-6">
            <div class="btn-group pull-right">
                @Html.ActionLink("Sort", "SortImages", "Product", new { id = Model.Id }, new { @class = "btn-xs btn-default btn" , data_toggle = "fb-modal" })
            </div>
        </div>
    </div>
</div>

@{ Html.RenderPartial("UploadAnywhere", Model.Gallery); }
