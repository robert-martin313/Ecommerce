@model MrCMS.Web.Apps.Ecommerce.Entities.Geographic.Region
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "Region", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Edit Region</h3>
    </div>
    <div class="modal-body">
        @Html.LabelFor(region => region.Name)
        @Html.TextBoxFor(region => region.Name)
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Edit Region" />
    </div>
}