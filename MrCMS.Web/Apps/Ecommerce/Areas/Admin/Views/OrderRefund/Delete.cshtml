@model MrCMS.Web.Apps.Ecommerce.Entities.Orders.OrderRefund

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Delete", "OrderRefund", FormMethod.Post))
{
    <fieldset>
        <legend>
            Delete Order Refund
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Delete Order Refund" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)

        <p>
            Are you sure you want to delete this refund ? Deleting this item can not be undone.
        </p>

    </fieldset>
}