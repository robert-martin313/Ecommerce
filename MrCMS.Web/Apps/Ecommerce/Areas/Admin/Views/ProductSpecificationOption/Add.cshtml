@model MrCMS.Web.Apps.Ecommerce.Entities.ProductSpecificationOption

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Add", "ProductSpecificationOption", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Add Product Specification Option</h3>
    </div>
    <div class="modal-body">
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Add Option" />
    </div>
}