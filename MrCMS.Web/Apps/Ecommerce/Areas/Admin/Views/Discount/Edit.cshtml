@model MrCMS.Web.Apps.Ecommerce.Entities.Discount
@using MrCMS.Helpers
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@{ Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/edit-discount.js");}

@using (Html.BeginForm("Edit", "Discount", FormMethod.Post))
{
    <div class="modal-header">
        <h3>Edit Discount</h3>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id)
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name)
        @Html.LabelFor(x => x.Code)
        @Html.TextBoxFor(x => x.Code)
        @Html.LabelFor(x => x.DateFrom, "From")
        @Html.TextBoxFor(x => x.DateFrom)
        @Html.LabelFor(x => x.DateTo, "To")
        @Html.TextBoxFor(x => x.DateTo)
        @Html.LabelFor(x => x.Limitation)
        @Html.DropDownList("LimitationOpt", Model.LimitationOptions, new { data_val = "true", data_val_required = "Please select a limitation." })
        <div id="limitationValue" style="display:none;"></div>
        @Html.LabelFor(x => x.Application)
        @Html.DropDownList("ApplicationOpt", Model.ApplicationOptions, new { data_val = "true", data_val_required = "Please select application." })
         <div id="applicationValue" style="display:none;"></div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Update Discount" />
    </div>
}