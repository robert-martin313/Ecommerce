@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Entities.Products.ProductSpecificationAttribute
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "ProductSpecificationAttribute", FormMethod.Post))
{
    <fieldset>
        <legend>
            Edit Product Specification Atrribute
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Update Atrribute" />
            </span>
        </legend>

        <div class="form-group">
            @Html.HiddenFor(x=>x.Id)
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        @Html.InlineCheckboxFor(attribute => attribute.HideInSearch)
    </fieldset>
}