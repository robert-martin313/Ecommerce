@using MrCMS.Helpers
@model MrCMS.Paging.IPagedList<MrCMS.Web.Apps.Ecommerce.Entities.Products.ProductVariant>

@if (Model.Count == 0)
{
    @:No products with low stock.
}
else
{
    <div class="row">
        <div class="col-lg-3">
            <strong>Name</strong>
        </div>
        <div class="col-lg-2">
            <strong>SKU</strong>
        </div>
        <div class="col-lg-1">
            <strong>Price</strong>
        </div>
        <div class="col-lg-2">
            <strong>Published</strong>
        </div>
        <div class="col-lg-2">
            <strong>Stock Remaining</strong>
        </div>
        <div class="col-lg-2">
            <strong>Actions</strong>
        </div>
    </div>
    foreach (var item in Model)
    {
        @Html.Partial("LowStockReportProductVariant", item)
    }
    
    @Html.Hidden("threshold",ViewData["threshold"])
    @Html.Hidden("page",ViewData["page"])

    @Html.Pager(Model, "LowStockReport", i => new { page = i })
}