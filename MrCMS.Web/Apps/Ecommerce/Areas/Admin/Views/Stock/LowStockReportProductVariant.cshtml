@model MrCMS.Web.Apps.Ecommerce.Entities.Products.ProductVariant

@using (Html.BeginForm("UpdateStock", "Stock", new { t = ViewData["treshold"]}, FormMethod.Post))
{
    <div class="row">
        <div class="col-lg-3">
            @Html.HiddenFor(x=>x.Id)
            <a href="@Model.EditUrl">@(!String.IsNullOrWhiteSpace(Model.Name)?Model.Name:Model.Product.Name)</a>
        </div>
        <div class="col-lg-2">
            @Model.SKU
        </div>
        <div class="col-lg-1">
            @Model.Price
        </div>
        <div class="col-lg-2">
            @Html.CheckBox("Published", Model.Product.Published, new {disabled = "disabled"})
        </div>
        <div class="col-lg-2">
        @Html.TextBox("StockRemaining", Model.StockRemaining, new {@class = "input-mini"})
            </div>
        <div class="col-lg-2">
            <button type="submit" class="btn update-stock">
                Update
            </button>
        </div>
    </div>
}
<hr />
