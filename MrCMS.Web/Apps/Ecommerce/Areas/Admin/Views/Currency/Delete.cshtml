@model MrCMS.Web.Apps.Ecommerce.Entities.Currencies.Currency

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Delete", "Currency", FormMethod.Post))
{
    <fieldset>
        <legend>Delete Currency
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Delete Currency" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)
        <p>
            Are you sure you want to delete the currency @Model.Name? Deleting this item can not be undone.
        </p>

    </fieldset>
}