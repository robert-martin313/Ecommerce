@model MrCMS.Web.Apps.Ecommerce.Entities.Currencies.Currency
@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}
@using (Html.BeginForm("Edit", "Currency", FormMethod.Post))
{
    <fieldset>
        <legend>Edit Currency
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Edit Currency" />
            </span>
        </legend>

        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Code)
            @Html.TextBoxFor(x => x.Code, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Code)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Format)
            @Html.TextBoxFor(x => x.Format, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Format)
        </div>

    </fieldset>
}