@model MrCMS.Web.Apps.Ecommerce.Entities.Search.SearchLog

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Edit", "SearchLog", FormMethod.Post))
{
    <fieldset>
        <legend>Edit Search Log
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Save Changes" />
            </span>
        </legend>
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Text)
            @Html.TextBoxFor(x => x.Text, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Text)
        </div>
    </fieldset>
}