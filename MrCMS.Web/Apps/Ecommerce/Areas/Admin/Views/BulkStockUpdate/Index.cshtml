@using MrCMS.Web.Apps.Ecommerce.Settings
@model dynamic
@{
    ViewBag.Title = "Bulk Stock Update";
}

<fieldset>
    <legend>
        Bulk Stock Update
        <span class="btn-group  display-inline  pull-right">
            @Html.ActionLink("Stock Report (CSV)", "Export", "StockReport", null, new { @class = "btn btn-primary" })
        </span>
    </legend>
    @using (Html.BeginForm("Index", "BulkStockUpdate", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <label>Choose Import File</label>
        <input type="file" name="document" id="document" />
        <div class="clearfix"></div>
        <br />
        <input type="submit" class="btn btn-primary" value="Start Bulk Stock Update" />
    }
</fieldset>
    @if (SiteSettings<EcommerceSettings>().WarehouseStockEnabled)
    {<div class="row">
        <div class="col-lg-4">
            @{ Html.RenderAction("Reference", "Warehouse"); }
        </div>
    </div>
    }