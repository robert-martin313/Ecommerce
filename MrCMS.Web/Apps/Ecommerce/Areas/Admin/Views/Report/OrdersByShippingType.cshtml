@using System.Web.Mvc.Html
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Ecommerce.Models
@model ChartModel
@{
    ViewBag.Title = "Orders by shipping type";
}

<fieldset>
    <legend>
        Orders by shipping type
    </legend>

        @using (Html.BeginForm("OrdersByShippingType", "Report", new { id = "" }, FormMethod.Get))
        {
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.From)
                        @Html.TextBoxFor(x => x.From, new { @class = "form-control date-time-picker" })
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.To)
                        @Html.TextBoxFor(x => x.To, new { @class = "form-control date-time-picker" })
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Filter</button>
        }

    <div class="row">
        <div class="col-lg-12">
            <div id="chart"></div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-6">
            <div id="message"></div>
        </div>
    </div>
</fieldset>

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
@{ Html.IncludeScript("~/Apps/Ecommerce/Areas/Admin/Content/Scripts/custom/orders-by-shipping-type.js"); }
