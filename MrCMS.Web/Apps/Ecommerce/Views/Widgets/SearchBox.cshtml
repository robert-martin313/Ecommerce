@model MrCMS.Web.Apps.Ecommerce.Widgets.SearchBox
<div id="search-box">
    <div class="row-fluid">
        <div class="span8">
            @Html.TextBox("searchTerm", Request.QueryString["SearchTerm"], new { @class = "span12 search-input", placeholder = "e.g : Shorts" })
        </div>
        <div class="span4">
            <button class="btn span12" type="button" id="searchButton" name="searchButton">Search</button>
        </div>
    </div>
</div>
