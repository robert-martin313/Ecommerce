@model MrCMS.Web.Apps.Ecommerce.Widgets.FeaturedCategoriesViewModel
@if (Model != null)
{
    <hr />
    if (!String.IsNullOrEmpty(Model.Title))
    {
    <h4>@Model.Title</h4>
    }

    <div class="row-fluid">
    @foreach (var item in Model.Categories)
    {
            <div class="span3">
                <div style="height:130px; overflow:hidden;" >
                @if(item.FeatureImage!=null)
                {
                    <img src="@(item.FeatureImage)" class="img-rounded pull-left span12" alt="@item.Name"/>
                }
                </div>
                    <div class="clearfix"></div>
                <h4 class="category-title"><a href="/@item.LiveUrlSegment">@item.Name</a></h4>
           </div>
    }
    </div>
}