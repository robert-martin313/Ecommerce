@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Widgets.On404SearchWidget.On404SearchWidgetModel
@if (Model.AnyProducts)
{
    <div class="container">
        <div class="row-fluid">
            @Html.Raw(Model.Text)
        </div>
        @foreach (var row in Model.Products.Chunk(4))
        {
            <div class="row-fluid grid-items">
                @foreach (var product in row)
                {
                    Html.RenderPartial("ProductCardFeatured", product);
                }
            </div>
        }
    </div>
}
