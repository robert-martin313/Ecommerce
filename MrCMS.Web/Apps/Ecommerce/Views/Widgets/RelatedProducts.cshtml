@model MrCMS.Web.Apps.Ecommerce.Models.RelatedProductsViewModel
@if (Model != null && Model.Products.Any())
{
    ViewData["cart"] = Model.Cart;
    
    <div class="margin-top-70-bottom-30 grey-border-top">
        <div class="container">
            <div class="margin-top-bottom-30">
                <div class="row">
                    <div class="col-md-12">
                        <span class="title">
                            @if (!String.IsNullOrEmpty(Model.Title))
                            {
                                @Model.Title
                            }
                        </span>
                    </div>
                </div>
                <div class="row">
                    @foreach (var item in Model.Products)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                            @{
                        Html.RenderPartial("ProductCardFeatured", item);
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

