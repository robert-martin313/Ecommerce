@model MrCMS.Web.Apps.Ecommerce.Pages.CategoryContainer
@using MrCMS.Helpers

@if (Model != null && ((List<MrCMS.Web.Apps.Ecommerce.Pages.Category>)ViewBag.Categories).Any())
{
   <h1>Categories</h1>
    if(((List<MrCMS.Web.Apps.Ecommerce.Pages.Category>)ViewBag.Categories).Any())
    {
        foreach (var items in ((List<MrCMS.Web.Apps.Ecommerce.Pages.Category>)ViewBag.Categories).Chunk(4))
        {
            <div class="row-fluid">
                @foreach (var item in items)
                {
                    <div class="span3">
                        <div class="category-photo text-align-center">
                        @if(item.FeatureImage!=null)
                        {
                            <a href="/@item.LiveUrlSegment" title="@item.Name">
                                <img src="@(item.FeatureImage)" alt="@item.Name"/>
                            </a>
                        }
                        </div>
                        <div class="clearfix"></div>
                        <h3><a href="/@item.LiveUrlSegment">@item.Name</a></h3>
                     </div>
                }
            </div>
        }
    }
}
else
{
    <span>No categories.</span>
}