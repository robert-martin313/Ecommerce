@using MrCMS.Web.Apps.Ecommerce.Models
@using MrCMS.Website
@model CartModel

<div class="row">
    <div class="col-sm-8">
        @if (CurrentRequestData.CurrentUser == null)
        {
            Html.RenderPartial("SetOrderEmailAndLogin", new EmailAndLoginModel { OrderEmail = Model.OrderEmail });
        }
        else
        {
            using (Html.BeginForm("SetOrderEmail", "EnterOrderEmail", FormMethod.Post))
            {
                <div class="border-all">
                    <div class="sub-header grey-background">
                        <h1>@Resource("Checkout Enter Order Email - Title", "Email Address")</h1>
                    </div>
                    <div class="padding-20">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.OrderEmail, "Enter your Email address *:", new { @class = "col-sm-6" })
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.OrderEmail, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.OrderEmail)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <button type="submit" class="btn btn-primary btn-block" name="continue" id="continue">@Resource("Continue Securely")</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="col-sm-4">
        @{Html.RenderAction("Summary", "Checkout");}
    </div>
</div>