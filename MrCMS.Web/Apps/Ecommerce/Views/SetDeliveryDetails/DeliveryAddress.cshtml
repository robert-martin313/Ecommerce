@model MrCMS.Web.Apps.Ecommerce.Entities.Users.Address
@{
    var otherAddresses = ViewData["other-addresses"] as List<SelectListItem>;
}
<div id="delivery-address-container">
    @if (Model != null)
    {
        using (Html.BeginForm("SetAddress", "SetDeliveryDetails", FormMethod.Post, new { id = "deliveryDetails", @class = "form-horizontal" }))
        {
            <h4>Who shall we deliver to?</h4>

            if (otherAddresses.Any())
            {
            <div class="control-group">
                <label class="control-label" for="existing-addresses">Use Existing Address :</label>
                <div class="controls">
                    @Html.DropDownList("existing-addresses", otherAddresses)
                </div>
            </div>
            }
            <div class="control-group">
                <label class="control-label" for="FirstName">First Name <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.FirstName, new { placeholder = "First name" })
                    @Html.ValidationMessageFor(address => address.FirstName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="LastName">Last Name <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.LastName, new { placeholder = "Last name" })
                    @Html.ValidationMessageFor(address => address.LastName)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="PhoneNumber">Phone Number <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.PhoneNumber, new { placeholder = "Phone number" })
                    @Html.ValidationMessageFor(address => address.PhoneNumber)
                </div>
            </div>
            <hr />
            <h4>Where would you like to deliver?</h4>
            <div class="control-group">
                <label class="control-label" for="Address1">Address 1 <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.Address1, new { placeholder = "Address 1" })
                    @Html.ValidationMessageFor(address => address.Address1)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Address2">Address 2 :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.Address2, new { placeholder = "Address 2" })
                    @Html.ValidationMessageFor(address => address.Address2)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="City">City <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.City, new { placeholder = "City" })
                    @Html.ValidationMessageFor(address => address.City)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="StateProvince">State/Province <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.StateProvince, new { placeholder = "State/Province" })
                    @Html.ValidationMessageFor(address => address.StateProvince)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="Country">Country <span class="red">*</span> :</label>
                <div class="controls line-height-30">
                    @Html.DisplayFor(address => address.Country.Name)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="PostalCode">Postal Code <span class="red">*</span> :</label>
                <div class="controls">
                    @Html.TextBoxFor(address => address.PostalCode, new { placeholder = "Postal Code" })
                    @Html.ValidationMessageFor(address => address.PostalCode)
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="submit" class="btn btn-info" id="continue" name="continue" value="Deliver to This Address" />
                </div>
            </div>
        }
    }
</div>