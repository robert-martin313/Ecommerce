@using MrCMS.Web.Apps.Ecommerce.Helpers
@model MrCMS.Web.Apps.Ecommerce.Models.CartModel

<div id="basic-details">
@if(Model.Items.Any())
{
<h4>Your Order</h4>
<br />
<div>
    <div class="span6">Order</div>
    <div>@Model.TotalPreShipping.ToCurrencyFormat()</div>
</div>
    <div class="clearfix"></div>
    <div>
        @if (Model.ShippingTotal.HasValue && Model.ShippingTotal.Value > 0)
        {
            <div class="span6">Shipping</div>
            <div>
                @Model.ShippingTotal.Value.ToCurrencyFormat()
            </div>
        }
    </div>
<div class="clearfix"></div>
<div>
    <div class="span6">Total</div>  
    <div>@Model.Total.ToCurrencyFormat()</div>
</div>
}
</div>