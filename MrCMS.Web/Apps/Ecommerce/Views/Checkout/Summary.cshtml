@using MrCMS.Helpers
@using MrCMS.Web.Apps.Ecommerce.Helpers
@using MrCMS.Web.Apps.Ecommerce.Settings
@model MrCMS.Web.Apps.Ecommerce.Models.CartModel
<div id="basic-details" class="margin-bottom-20">
    @if (Model.Items.Any())
    {
        <div class="block-title">
            <div class="h1style">
                Order Summary
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <ul class="media-list">
                                <li>@item.Name</li>
                                <li>Item Price : @item.UnitPrice.ToCurrencyFormat()</li>
                                <li>Quantity : @item.Quantity</li>
                            </ul>
                        </td>
                        <td>@item.Price.ToCurrencyFormat()</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Sub Total :</th>
                    <td>@Model.TotalPreShipping.ToCurrencyFormat()</td>
                </tr>
                @if (Model.ShippingTotal > decimal.Zero)
                {
                    <tr>
                        <th>Shipping :</th>
                        <td>@Model.ShippingTotal.ToCurrencyFormat()</td>
                    </tr>
                }
                @if (Model.HasDiscount)
                {
                    <tr>
                        <th>Discount : </th>
                        <td>@((-Model.OrderTotalDiscount).ToCurrencyFormat())</td>
                    </tr>
                }
                @if (MrCMS.Website.MrCMSApplication.Get<TaxSettings>().TaxesEnabled)
                {
                    <tr>
                        <th>Tax : </th>
                        <td>@Model.Tax.ToCurrencyFormat()</td>
                    </tr>
                }
                <tr>
                    <th>Total :</th>
                    <td><strong>@Model.Total.ToCurrencyFormat()</strong></td>
                </tr>
                @if (Model.AppliedGiftCards.Any())
                {
                    foreach (var card in Model.AppliedGiftCards)
                    {
                        <tr>
                            <td>
                                Gift Card @card.Code
                            </td>
                            <td>
                                @card.AvailableAmount.ToCurrencyFormat()
                            </td>
                        </tr>
                    }
                <tr>
                    <th>Total to pay:</th>
                    <td><strong>@Model.TotalToPay.ToCurrencyFormat()</strong></td>
                </tr>
                }
            </tfoot>
        </table>
    }
    <a class="btn btn-grey" id="edit" href="@(UniquePageHelper.GetUrl<MrCMS.Web.Apps.Ecommerce.Pages.Cart>())">Edit</a>
</div>