@model MrCMS.Web.Apps.Ecommerce.Entities.Cart.CartItem
@{
    ViewBag.Title = "Delete Cart Item";
}

@{ Layout = "~/Apps/Ecommerce/Views/Shared/_EcommercePopup.cshtml";}	 
@using (Html.BeginForm("DeleteCartItem", "Cart", FormMethod.Post))
{
     @Html.HiddenFor(x => x.Id)
    <div class="modal-header">
        <h3>Delete Cart Item</h3>
    </div>
    <div class="modal-body">
        Are you sure you want to delete this cart item?
        <br />
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn-primary btn" value="Delete Cart Item" />
    </div>
}