@model MrCMS.Web.Apps.Ecommerce.Entities.Cart.CartItem
@{ Layout = "~/Apps/Ecommerce/Views/Shared/_EcommercePopup.cshtml";}	 
@using (Html.BeginForm("EditCartItem", "Cart", FormMethod.Post))
{
    <fieldset>
        <legend>
            Edit Cart Item
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Save Changes" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)

        @Html.LabelFor(x => x.Quantity)
        @Html.TextBoxFor(x => x.Quantity)
        @Html.ValidationMessageFor(x => x.Quantity)
    </fieldset>
}