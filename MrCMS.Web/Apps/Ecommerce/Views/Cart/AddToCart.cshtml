@model MrCMS.Web.Apps.Ecommerce.Models.AddToCartModel
@using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ProductVariant.Id)
    <div id="product-addtobasket" class="padding-bottom-20 grey-border-bottom">
        <div class="col-sm-3 padding-left-0">
            @Html.LabelFor(model => model.Quantity, new { @class = "line-height-30" }) :
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Quantity, new {@class = "col-sm-2"})
        </div>
        <div class="clearfix"></div>
        <button class="btn btn-green btn-block" type="submit">Add to basket</button>
        <div class="clearfix"></div>
        @Html.ValidationMessageFor(model => model.Quantity)
    </div>
}