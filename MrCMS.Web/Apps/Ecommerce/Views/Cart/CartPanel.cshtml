@model MrCMS.Web.Apps.Ecommerce.Models.CartModel
@using MrCMS.Helpers

<div class="row-fluid">
    <div class="span7">
        <div id="basket-info-box">
            <i class="icon-shopping-cart"></i>Your basket has
            @if (Model.Items.Any())
            {
                @Model.Items.Count() <span>items - &pound;@Model.Total.ToString("#.##")</span>
            }
            else
            {
                <span>no items.</span>
            }
        </div>
    </div>
    <div class="span5">
        <a class="btn btn-info span12 checkout-btn" href="@(UniquePageHelper.GetUrl<MrCMS.Web.Apps.Ecommerce.Pages.EnterOrderEmail>())">Checkout</a>
    </div>
</div>
