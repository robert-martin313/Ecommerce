@using MrCMS.Helpers
@using MrCMS.Settings
@using MrCMS.Website
@model MrCMS.Entities.Documents.Web.Webpage
@{
    Layout = "_BaseLayout.cshtml";
}
<div id="fb-root"></div>
<div class="container">
    <div class="row-fluid">
        <div class="span3">
            @RenderZone("Header left")
        </div>
        <div class="span6">
            @RenderZone("Header Middle")
        </div>
        <div class="span3">
            <div class="row-fluid">
                <div class="span12">
                    <div class="pull-right">
                        @RenderZone("User Links")
                    </div>
                </div>
            </div>
            @RenderZone("Header Right")
        </div>
    </div>
</div>

<div id="navbar-wrapper">
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                @RenderZone("Navigation")
            </div>
        </div>
    </div>
</div>

<div class="container">
    @RenderZone("Before Content")
    @RenderBody()
    @RenderZone("After Content")
</div>

<div id="footer">
    <div class="container">
        @RenderZone("Footer")
    </div>
</div>
