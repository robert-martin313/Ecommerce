@using MrCMS.Web.Areas.Admin.Helpers
@model dynamic
           
@if (TempData.SuccessMessages().Any())
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var msg in TempData.SuccessMessages())
        {
            <p>@msg</p>
        }
    </div>
}
@if (TempData.ErrorMessages().Any())
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var msg in TempData.ErrorMessages())
        {
            <p>@msg</p>
        }
    </div>
}
@if (TempData.InfoMessages().Any())
{
    <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @foreach (var msg in TempData.InfoMessages())
        {
            <p>@msg</p>
        }
    </div>
}