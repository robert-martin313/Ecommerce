@using System.Drawing
@using MrCMS.Web.Apps.Ecommerce.Helpers
@using MrCMS.Web.Apps.Ecommerce.Models
@model ProductCardModel

<div class="product-con">
    <div class="product-image">
        <a href="/@Model.Url">@RenderImage(Model.Image, new Size { Width = 200, Height = 200 }, attributes: new { @class = "img-responsive" })</a>
    </div>
    <div class="product-info">
        <div class="product-name">
            <a href="/@Model.Url">@Model.Name</a>
        </div>
        <div class="product-price">
            <span class="current-price">
                @Model.Price.ToCurrencyFormat()
            </span>
            @if (Model.PreviousPrice.HasValue)
            {
                <span class="old-price">
                    <span class="inner">
                        @Model.PreviousPriceText : @Model.PreviousPrice.ToCurrencyFormat()
                    </span>
                </span>
                <span></span>
            }
        </div>
    </div>
</div>