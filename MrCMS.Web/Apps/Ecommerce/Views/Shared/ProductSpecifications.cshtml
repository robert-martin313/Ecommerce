@using MrCMS.Helpers
@model MrCMS.Web.Apps.Ecommerce.Pages.Product  
<div id="product-specifications">
    <table class="table table-condensed">
        @foreach (var item in Model.SpecificationValues.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td class="col-sm-4"><strong>@item.SpecificationName</strong></td>
                <td class="col-sm-8">@item.Value</td>
            </tr>
        }
    </table>
</div>
