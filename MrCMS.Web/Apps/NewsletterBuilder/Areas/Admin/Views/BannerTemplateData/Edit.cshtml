@using MrCMS.Helpers
@model MrCMS.Web.Apps.NewsletterBuilder.Entities.TemplateData.BannerTemplateData

@using (Html.BeginForm("Edit", "BannerTemplateData", FormMethod.Post))
{
    @Html.ReturnToReferrer()
    <fieldset>
        <legend>
            Update Banner Template Data  for @Model.NewsletterTemplate.Name
            <span class="pull-right display-inline btn-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </span>
        </legend>
        <div class="form-group">
            @Html.LabelFor(x => x.BannerTemplate)
            @Html.TextAreaFor(x => x.BannerTemplate, new { @class = "form-control", rows = 6 })
            @Html.ValidationMessageFor(x => x.BannerTemplate)
        </div>
        <div class="alert alert-info">
            <strong>Available Tokens: </strong> [ImageUrl], [LinkUrl]
        </div>
    </fieldset>
}