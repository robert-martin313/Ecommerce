@using System.Web.Mvc.Html
@using MarketplaceWebServiceFeedsClasses
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Amazon.Models
@using MrCMS.Web.Apps.Ecommerce.Helpers
@model MrCMS.Web.Apps.Amazon.Settings.AmazonSellerSettings
@{
    ViewBag.Title = "Amazon Seller Settings";
}

@using (Html.BeginForm("Settings", "Seller", new {id = ""}, FormMethod.Post, new {id = "edit-settings"}))
{
    <fieldset>
        <legend>Amazon Seller Settings
            <span class="btn-group  display-inline  pull-right">
                <button class="btn btn-primary">Save</button>
                @Html.ActionLink("Logs", "Index", "Logs", new {type = AmazonLogType.SellerSettings}, new {@class = "btn btn-success"})
            </span>
        </legend>
        
        @Html.HiddenFor(x => x.Site.Id)

        <div class="row-fluid">
            <div class="span6">
                @Html.LabelFor(x => x.SellerId)
                @Html.TextBoxFor(x => x.SellerId, new {@class = "span12"})
                @Html.ValidationMessageFor(x => x.SellerId)
            </div>
            <div class="span6">
                @Html.LabelFor(x => x.MarketplaceId)
                @Html.TextBoxFor(x => x.MarketplaceId, new {@class = "span12"})
                @Html.ValidationMessageFor(x => x.MarketplaceId)
            </div>       
        </div>
        <div class="row-fluid">
            <div class="span12">
                @Html.LabelFor(x => x.BarcodeIsOfType)
                @Html.DropDownList("BarcodeIsOfType",
                                   Enum.GetValues(typeof (StandardProductIDType)).OfType<StandardProductIDType>().BuildSelectItemList(type => type.GetDescription(), type => type.GetDescription(), null, String.Empty), new {})   
                @Html.ValidationMessageFor(x => x.BarcodeIsOfType)
            </div>
        </div>
    </fieldset>
}