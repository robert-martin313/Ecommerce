@using System.Web.Mvc.Html
@using MrCMS.Web.Apps.Amazon.Models
@model AmazonOrderSearchModel
@{
    ViewBag.Title = "Amazon Orders";
    var amazonManageOrdersUrl = ViewData["AmazonManageOrdersUrl"] as string;
}

<fieldset>
    <legend>Amazon Orders 
         
        <span class="btn-group  display-inline  pull-right">
            @*            @Html.ActionLink("Manual Sync", "SyncMany", "Orders", null, new { @class = "btn btn-primary"})*@
            @Html.ActionLink("Logs", "Index", "Logs", new { type = AmazonLogType.Orders }, new { @class = "btn" })

            @if (!String.IsNullOrWhiteSpace(amazonManageOrdersUrl))
            {
                <a href='@amazonManageOrdersUrl' target="_blank" class="btn">Manage Orders on Amazon
                </a>
            }
        </span>
    </legend>
</fieldset>

<div class="row-fluid">
    <div class="span12">
        @{Html.RenderPartial("Orders", Model); }
    </div>
</div>
