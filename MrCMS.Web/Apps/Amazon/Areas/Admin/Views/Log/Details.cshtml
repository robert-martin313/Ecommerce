@using MrCMS.Web.Apps.Ecommerce.Helpers
@model MrCMS.Web.Apps.Amazon.Entities.Logs.AmazonLog
@{
    ViewBag.Title = "View Amazon Log #" + Model.Id;
}

<form>
    <fieldset>
        <legend>Sync Log #@Model.Id
            <span class="btn-group  display-inline  pull-right">
                @Html.ActionLink("Back to Listing", "Index","Log", null, new { @class = "btn " })
            </span>
        </legend>
    </fieldset>
</form>
<div class="row-fluid">
    <table class="table table-striped table-condensed">

        <tbody>
            <tr>
                <td class="span2">Type
                </td>
                <td class="span10">
                    @Model.Type.GetDescription()
                </td>
            </tr>
            <tr>
                <td class="span2">Status
                </td>
                <td class="span10">
                    @Model.Status.GetDescription()
                </td>
            </tr>
            <tr>
                <td>Created on
                </td>
                <td>
                    @Model.CreatedOn
                </td>
            </tr>
            <tr>
                <td>Message
                </td>
                <td>
                    @Model.Message
                </td>
            </tr>
            @if (!String.IsNullOrWhiteSpace(Model.Details))
            {
                <tr>
                    <td>Detail
                    </td>
                    <td>
                        @Model.Details
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
