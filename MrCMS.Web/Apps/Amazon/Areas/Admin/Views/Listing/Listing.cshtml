@using MarketplaceWebServiceFeedsClasses
@using MrCMS.Helpers
@using MrCMS.Web.Apps.Ecommerce.Helpers
@model MrCMS.Web.Apps.Amazon.Entities.Listings.AmazonListing

<div class="row">
    <div class="col-lg-6">
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.ProductVariant.Id)
        <div class="form-group">
            @Html.LabelFor(x => x.Title)
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Title)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.SellerSKU)
            @Html.TextBoxFor(x => x.SellerSKU, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.SellerSKU)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.StandardProductIDType)
            @Html.DropDownList("StandardProductIDType",
                Enum.GetValues(typeof(StandardProductIDType)).OfType<StandardProductIDType>().BuildSelectItemList(type => type.GetDescription(), type => type.GetDescription(), null, String.Empty),
                new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.StandardProductId)
            @Html.TextBoxFor(x => x.StandardProductId, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.StandardProductId)
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Quantity)
                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Quantity)
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Price)
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Price)
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Currency)
                    @Html.TextBoxFor(x => x.Currency, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Currency)
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            @Html.LabelFor(x => x.Brand)
            @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Brand)
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.Manafacturer)
                    @Html.TextBoxFor(x => x.Manafacturer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Manafacturer)
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.MfrPartNumber)
                    @Html.TextBoxFor(x => x.MfrPartNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.MfrPartNumber)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.Condition)
                    @Html.DropDownList("Condition",
                        Enum.GetValues(typeof(ConditionType)).OfType<ConditionType>().BuildSelectItemList(type => type.GetDescription(), type => type.GetDescription(), null, String.Empty),
                        new { @class = "form-control" })
                </div>

            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ReleaseDate)
                    @Html.EditorFor(x => x.ReleaseDate)
                    @Html.ValidationMessageFor(x => x.ReleaseDate)
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ConditionNote)
            @Html.TextAreaFor(x => x.ConditionNote, new { @class = "form-control", style = "height:95px" })
            @Html.ValidationMessageFor(x => x.ConditionNote)
        </div>
    </div>
</div> 