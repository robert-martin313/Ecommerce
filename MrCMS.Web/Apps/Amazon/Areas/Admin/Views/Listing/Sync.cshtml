@model MrCMS.Web.Apps.EBay.Entities.Listings.EBayListing

@{ Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";}	   
@using (Html.BeginForm("Sync", "Listing", FormMethod.Post))
{
    <fieldset>
        <legend>
            Sync eBay Listing
            <span class="btn-group  display-inline  pull-right">
                <input type="submit" class="btn-primary btn" value="Sync Listing" />
            </span>
        </legend>

        @Html.HiddenFor(x => x.Id)
        @Html.Hidden("Location",TempData["Location"])

        <p>
            Are you sure you want to sync listing <strong>@Model.Product.Name</strong> with current data on eBay ? 
        </p>
        <div class="alert alert-danger">
            By clicking on 'Sync Listing', all items related to this listing will be synced with current data on eBay.
        </div>
    </fieldset>
}