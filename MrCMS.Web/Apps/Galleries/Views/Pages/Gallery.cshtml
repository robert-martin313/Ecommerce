@using System.Drawing
@using MrCMS.Helpers
@model MrCMS.Web.Apps.Galleries.Pages.Gallery
@Editable(Model, page => page.BodyContent, true)

@foreach (var row in Model.MediaGallery.Files.Where(file => file.IsImage).OrderBy(x => x.DisplayOrder).Chunk(4))
{
    <div class="row-fluid margin-top-10">
        @foreach (var result in row)
        {
            <div class="span3">
                <a href="@result.FileUrl">
                    @Html.RenderImage(result.FileUrl, new Size { Width = 800, Height = 800 })
                </a>
            </div>
        }
    </div>
}
