@using MrCMS.Helpers
@using MrCMS.Settings
@using MrCMS.Website
@model MrCMS.Entities.Documents.Web.Webpage
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@(!string.IsNullOrWhiteSpace(Model.MetaTitle) ? Model.MetaTitle : Model.Name)</title>
    <meta name="description" content="@Model.MetaDescription" />
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        Html.IncludeCss("~/Content/bootstrap/css/bootstrap.css");
        Html.IncludeCss("~/Content/bootstrap/css/bootstrap-responsive.css");
        Html.IncludeCss("~/Content/Styles/style.css");
    }
    @Html.RenderCss()
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><script src="/Content/Scripts/respond.min.js"></script><![endif]-->
    
    @Html.Raw(SiteSettings<SEOSettings>().TrackingScripts)
</head>
<body>
    <div class="container">
        <div class="masthead">
            <h3 class="muted">Mr CMS - not just another CMS</h3>
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        @RenderZone("Main Navigation")
                    </div>
                </div>
            </div>
        </div>
        @RenderZone("Before Content")
        @RenderBody()
        @RenderZone("After Content")

        <hr>

        <div class="footer">
            <p>&copy; Mr CMS 2013</p>
        </div>

    </div>
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    @{ Html.IncludeScript("~/Content/bootstrap/js/bootstrap.min.js");
       Html.IncludeScript("~/Content/Scripts/jquery.validate.min.js");
       Html.IncludeScript("~/Content/Scripts/jquery.validate.unobtrusive.min.js");}
    @Html.RenderScripts()
    @if (CurrentRequestData.CurrentUserIsAdmin && SiteSettings<SiteSettings>().EnableInlineEditing)
    {
        Html.RenderAction("InPageEditor", "InPageMrCMSAdmin", new { id = Model.Id, area = "Admin" });
    }
    @if (IsSectionDefined("JavascriptBlockInclude"))
    {
        @RenderSection("JavascriptBlockInclude")
    }
</body>
</html>
